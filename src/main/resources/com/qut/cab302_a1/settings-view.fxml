<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:id="settingsMain" fx:controller="com.qut.cab302_a1.SettingsController">

    <VBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT">
            <Button fx:id="backButton">‚Üê</Button>
        </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label fx:id="settingsLabel">Settings</Label>
        </VBox>


    </VBox>
    <HBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="20" />
        </padding>
       <StackPane alignment="CENTER">

           <Rectangle fx:id="rec1"></Rectangle>
           <HBox>
               <Label fx:id="rec1Label1">0</Label>
               <Label fx:id="rec1Label2">Projects left</Label>
           </HBox>
       </StackPane>
        <StackPane alignment="CENTER">
            <Rectangle fx:id="rec2"></Rectangle>
            <HBox>
               <Label fx:id="rec2Label1">0</Label>
               <Label fx:id="rec2Label2">Projects done</Label>
           </HBox>
        </StackPane>
    </HBox>
    <VBox alignment="CENTER_LEFT" spacing="30">
        <padding>
            <Insets left="30" right="10"/>
        </padding>
        <VBox>
            <Label fx:id="settingsLabel2">Settings</Label>
            <VBox alignment="CENTER" spacing="5">
                <Button fx:id="buttonLang">Change App Language ></Button>
                <Button fx:id="buttonTypo">Change App Typography ></Button>
            </VBox>
        </VBox>
        <VBox>
            <Label fx:id="accountLabel">Account</Label>
            <VBox alignment="CENTER" spacing="5">
                <Button fx:id="buttonAccount">Change Account Name ></Button>
                <Button fx:id="buttonPass">Change Account Password ></Button>
                <Button fx:id="buttonImg">Change Account Image ></Button>
            </VBox>
        </VBox>
        <VBox>
            <Label fx:id="appLabel">DIY App</Label>
            <VBox alignment="CENTER">
                <Button fx:id="buttonAbout">About Us ></Button>
            </VBox>
        </VBox>
    </VBox>
    <Region VBox.vgrow="ALWAYS"></Region>
    <VBox alignment="BOTTOM_LEFT">
        <padding>
            <Insets bottom="15" left="10"/>
        </padding>
        <Button fx:id="buttonLogout">Logout</Button>
    </VBox>
</VBox>