<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.qut.cab302_a1.ProjectController" >
    <VBox fx:id="sideVBox" spacing="15.0" minWidth="200.00" >
        <HBox spacing="100.0" alignment="TOP_LEFT">
            <padding>
                <Insets left="20.00" top="35.00"></Insets>
            </padding>
            <Label>Projects</Label>
            <Button>+</Button> <!--Change to an icon -->
        </HBox>

        <VBox alignment="TOP_LEFT">
            <padding>
                <Insets left="20.00" top="65.00"></Insets>
            </padding>
            <HBox spacing="100.0" alignment="TOP_LEFT">
                <Label>Projects</Label>
                <Button>V</Button> <!--Will be used to hide below elements -->
            </HBox>
            <HBox spacing="5.0">
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|-</Label>
                <Hyperlink>All projects (0)</Hyperlink>
            </HBox>
            <HBox>
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|</Label>
            </HBox>
            <HBox spacing="5.0">
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|-</Label>
                <Hyperlink>To do (0)</Hyperlink>
            </HBox>
            <HBox>
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|</Label>
            </HBox>
            <HBox spacing="5.0">
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|-</Label>
                <Hyperlink>In progress (0)</Hyperlink>
            </HBox>
            <HBox>
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|</Label>
            </HBox>
            <HBox spacing="5.0">
                <padding>
                    <Insets left="15.00"></Insets>
                </padding>
                <Label>|_</Label>
                <Hyperlink>Completed (0)</Hyperlink>

            </HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS"></Region>
        <HBox alignment="BOTTOM_LEFT" spacing="80.0">
            <padding>
                <Insets bottom="20.00" left="20.00"></Insets>
            </padding>
            <Button>(- Logout</Button>
            <Button>*</Button>
        </HBox>
    </VBox>

    <!--Main page stuff -->
    <ScrollPane fx:id="mainScrollPane"  vbarPolicy="NEVER" hbarPolicy="NEVER" vvalue="0" HBox.hgrow="ALWAYS"> <!--Consider removing the NEVER statements and changing the appearence in css. -->
    <padding>
        <Insets left="10.0" right="10.0" top="30.0"/>
    </padding>
        <VBox spacing="15.0" alignment="CENTER" fx:id="mainVbox">
            <Button fx:id="CreatePanel" onAction="#onCreatePanelAction" text="Create Panel"></Button>
        </VBox>
    </ScrollPane>
