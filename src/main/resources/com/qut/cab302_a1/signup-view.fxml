<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:id="signupMain"
      fx:controller="com.qut.cab302_a1.SignupController">

    <VBox alignment="TOP_LEFT" spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="20.0" right="10.0" top="15.0"/>
        </padding>
        <Button fx:id="settingsButton" onAction="#settingsClick">⚙️</Button>
        <VBox>
            <padding>
                <Insets left="10.0" top="10"/>
            </padding>
            <Label fx:id="registerText" text="Register"/>
        </VBox>

    </VBox>
    <VBox alignment="CENTER" spacing="10">
        <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        <VBox alignment="BOTTOM_LEFT">
            <Label fx:id="userLabel">Username</Label>
        </VBox>
        <TextField fx:id="registerField"></TextField>
        <VBox alignment="BOTTOM_LEFT">
            <Label fx:id="passwordLabel">Password</Label>
        </VBox>
        <PasswordField fx:id="passwordField"></PasswordField>
        <VBox alignment="BOTTOM_LEFT">
            <Label fx:id="confirmLabel">Confirm Password</Label>
        </VBox>
        <PasswordField fx:id="confirmField"></PasswordField>
        <Label fx:id="incorrectPasswordLabel" visible="false">Incorrect Password</Label>
        <Button fx:id="registerButton" onAction="#signupButton" text="Register"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"></Region>
    <VBox alignment="TOP_CENTER" spacing="20">
        <padding>
            <Insets bottom="15.0"/>
        </padding>
        <Label fx:id="orLabel">-----------------------------or------------------------------</Label>
        <Button fx:id="googleButton">Register with Google</Button>
        <Button fx:id="appleButton">Register with Apple</Button>

        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="20"/>
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="loginLabel">Have an account? </Label>
                <Hyperlink fx:id="loginLink" onAction="#loginClick">Login</Hyperlink>
            </HBox>
        </VBox>

    </VBox>


</VBox>
